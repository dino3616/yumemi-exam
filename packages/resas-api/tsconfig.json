{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@yumemi-exam/tsconfig/tsconfig.node-esm.json",
  "compilerOptions": {
    "baseUrl": "./",
    "composite": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "lib": ["dom", "dom.iterable", "es2022"],
    "paths": {
      "@/*": ["./*"]
    },
    "rootDir": "./"
  },
  "include": ["**/*"],
  "exclude": ["**/node_modules/**/*", "./**/*.js"]
}
